@{

    List<Object>
    mainMenuItems = new List<Object>
        ();

    mainMenuItems.Add(new
    {
        text = "Home",
        url = "/",
        iconCss = "fa-solid fas fa-box"
    });

    mainMenuItems.Add(new
    {
        text = "Basic Crud",
        url = "/#",
        items = new List<object>
        ()
            {
            new {text="Students",url="/Students", iconCss = "fa fas fa-arrow-right"},
               new {text="Departments",url="/Departments", iconCss = "fa fas fa-arrow-right"},
         //   new {text="ሞዴል-20 ወጪ",url="/Outed/dialogtemplate"}
            }
    });



    mainMenuItems.Add(new
    {
        text = "Reports",
        url = "#",
        iconCss = "fa-solid fas fa-chart-bar"

    });
    mainMenuItems.Add(new
    {
        text = "Settings",
        url = "#",
        iconCss = "fa-solid fas fa-cog"

    });
    if (User.IsInRole("SuperAdmin"))
    {

        mainMenuItems.Add(new
        {
            text = "UserManagement",
            url = "/#",
            iconCss = "fa-solid fas fa-users",
            items = new List<object>
            ()
                {
                new {text="AddUser",url="/Identity/Account/Register", iconCss = "fa-solid fas fa-user"},
                new {text="RoleManager",url="/RoleManager",iconCss = "fa-solid fas fa-arrow-right"},
                new {text="UserRoles",url="/UserRoles",iconCss = "fa-solid fas fa-arrow-right"},

                }
        });
    }
}

<ejs-sidebar id="sidebar-menu" class="dock-menu" width="220px" target=".main-content" dockSize="50px" enableDock="true">
    <e-content-template>
        <div class="main-menu">
            <div>
                <ejs-menu id="main-menubar" items="mainMenuItems" orientation="Vertical" cssClass="dock-menu" hamburgerMode></ejs-menu>
            </div>
        </div>
    </e-content-template>
</ejs-sidebar>


